{
  "name": "nodejs-api-boilerplate",
  "description": "NodeJS API Boilerplate",
  "version": "1.0.3",
  "author": "Truong Vu <truong.vu@codeenginestudio.com>",
  "engines": {
    "node": ">= 8.10.0",
    "npm": ">= 3.10",
    "yarn": ">=0.20.3"
  },
  "main": "./src/index.js",
  "license": "MIT",
  "keywords": [
    "express",
    "es6",
    "es7",
    "rest",
    "api",
    "boilerplate",
    "mongodb",
    "node",
    "javascript",
    "pm2",
    "babel",
    "nps",
    "prettier",
    "lint-staged",
    "jest"
  ],
  "config": {
    "testPath": "./__tests__"
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn prettier",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit",
      "pre-push": "yarn test"
    }
  },
  "scripts": {
    "cp": "cpx -c ./nacl.json -c ./.dev ./dist",
    "build": "nps build",
    "debug": "nps debug",
    "dev": "nps dev",
    "start": "nps",
    "stop": "nps stop",
    "test": "nps test",
    "test:cover": "nps test.cover",
    "test:cover:open": "nps test.cover.open",
    "test:path": "npm config set $npm_package_name:testPath",
    "test:watch": "nps test.watch",
    "prettier": "prettier --write '{src,__{tests,mocks}__}/**/*.js'",
    "precommit": "nps lintStaged && nps validate",
    "lint": "nps lint",
    "lint:fix": "nps lint.fix",
    "doc": "nps doc",
    "doc:deploy": "nps doc.deploy"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-do-expressions": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/register": "^7.0.0",
    "apidoc": "^0.17.7",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "backpack-core": "^0.8.2",
    "base64url": "^3.0.1",
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "faker": "^4.1.0",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.5",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.6",
    "nps": "^5.9.3",
    "nps-utils": "^1.7.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.2",
    "semantic-release": "^15.12.0",
    "source-list-map": "2.0.1",
    "superagent": "^4.1.0",
    "supertest": "^3.3.0"
  },
  "dependencies": {
    "@sentry/node": "^4.4.1",
    "app-root-path": "^2.1.0",
    "babel-plugin-webpack-alias": "^2.1.2",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "cpx": "^1.5.0",
    "dotenv": "^6.1.0",
    "ejs": "^2.6.1",
    "email-templates": "2",
    "express": "^4.16.4",
    "express-acl": "^2.0.4",
    "express-brute": "^1.0.1",
    "express-brute-mongoose": "^1.0.2",
    "express-brute-redis": "^0.0.1",
    "express-validation": "^1.0.2",
    "express-winston": "^3.0.1",
    "helmet": "^3.15.0",
    "http-status": "^1.3.1",
    "joi": "^14.0.6",
    "jsonwebtoken": "^8.4.0",
    "method-override": "^3.0.0",
    "mongoose": "^5.3.12",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "nodemailer": "^2.3",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pm2": "^3.2.2",
    "pretty-error": "^2.1.1",
    "ramda": "^0.26.1",
    "slug": "^0.9.2",
    "winston": "^3.1.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./setupTest.js"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  }
}
